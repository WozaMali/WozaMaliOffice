NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

NEXT_PUBLIC_MAIN_URL=http://localhost:8080
NEXT_PUBLIC_OFFICE_URL=http://localhost:8081
NEXT_PUBLIC_COLLECTOR_URL=http://localhost:8082

# Shared auth cookie domain (use .wozamali.co.za in production)
NEXT_PUBLIC_COOKIE_DOMAIN=localhost

# WozaMali Frontend Environment Configuration
# Copy this file to .env in each frontend folder and fill in your actual values

# Backend API Configuration
REACT_APP_API_BASE_URL=http://localhost:5000
REACT_APP_SOCKET_URL=http://localhost:5000

# App Configuration
REACT_APP_APP_NAME=WozaMali
REACT_APP_APP_VERSION=1.0.0

# Feature Flags
REACT_APP_ENABLE_REAL_TIME=true
REACT_APP_ENABLE_NOTIFICATIONS=true

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=info
